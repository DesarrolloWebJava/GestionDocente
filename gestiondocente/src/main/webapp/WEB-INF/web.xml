<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>gestiondocente</display-name>
  <!-- Ficheros de entrada. Se intenta acceder en el orden en que está declarados.
       Si encuentra el primero no busca el resto. -->
  <welcome-file-list>
  	<!-- Se accede al Servlet LoginServlet que gestionará el login. -->
    <welcome-file>/login.do</welcome-file>
    <!-- En caso que no encuentre el Servlet LoginServlet accederá a index.jsp. -->   
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>AlumnoServlet</display-name>
    <servlet-name>AlumnoServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.AlumnoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AlumnoServlet</servlet-name>
    <url-pattern>/AlumnoServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AlumnoServet</display-name>
    <servlet-name>AlumnoServet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.AlumnoServet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AlumnoServet</servlet-name>
    <url-pattern>/alumno.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ProfesorServlet</display-name>
    <servlet-name>ProfesorServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.ProfesorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfesorServlet</servlet-name>
    <url-pattern>/profesor.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CursoServlet</display-name>
    <servlet-name>CursoServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.CursoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CursoServlet</servlet-name>
    <url-pattern>/curso.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
</web-app>