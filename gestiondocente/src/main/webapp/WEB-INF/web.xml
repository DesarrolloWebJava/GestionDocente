<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>gestiondocente</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>Este servlet va a gestionar las peticiones relacionadas con los alumnos.</description>
    <display-name>AlumnoServlet</display-name>
    <servlet-name>AlumnoServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.AlumnoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AlumnoServlet</servlet-name>
    <url-pattern>/alumno.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ProfesorServlet</display-name>
    <servlet-name>ProfesorServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.ProfesorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfesorServlet</servlet-name>
    <url-pattern>/profesor.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CursoServlet</display-name>
    <servlet-name>CursoServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.CursoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CursoServlet</servlet-name>
    <url-pattern>/curso.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>IdiomaServlet</display-name>
    <servlet-name>IdiomaServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.IdiomaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IdiomaServlet</servlet-name>
    <url-pattern>/idioma.do</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>CharterFilter</display-name>
    <filter-name>CharterFilter</filter-name>
    <filter-class>com.ipartek.formacion.controller.filters.CharterFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharterFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>ServletFilters</display-name>
    <filter-name>ServletFilters</filter-name>
    <filter-class>com.ipartek.formacion.controller.filters.ServletFilters</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ServletFilters</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <error-page>
  	<error-code>404</error-code>
 	<location>/error.jsp</location>
  </error-page>	
 </web-app>